					<sub> 100 </sub>
				</x>
				<y> 0 </y>
			</image>
	
			<image name="audio_foot_slider">
<include src="horiz_floating_scroll.xml"/>
				<depth> 3 </depth>
				<id> 7 </id>
				<x> 60 </x>
				<y> 22 </y>
				
				<user6> 8 </user6>			<!-- scroll marker id -->
