			<xright> <ref src="audio_return_button" trait="mouseover"/> </xright>
			<xup> <ref src="audio_music_slider_marker" trait="mouseover"/> </xup>
			<xdown> <ref src="audio_return_button" trait="mouseover"/> </xdown>
		</image>

		<!-- RETURN BUTTON ===========================================================================-->
