	<user5> 0 </user5>							<!-- cost of the spell that is being created -->
	<user6> &false; </user6>					<!-- visibility of "requires skill level" text -->
	<user7> 0 </user7>							<!-- Player gold -->
	
	<xbuttonb> <ref src="spell_button_exit" trait="clicked"/> </xbuttonb>
